<Page class="page" navigatingTo="onNavigatingTo" xmlns="http://schemas.nativescript.org/tns.xsd" xmlns:DrawingPad="nativescript-drawingpad">
    <ActionBar class="action-bar" flat="true">
        <NavigationButton tap="onBackButtonTap" android.systemIcon="ic_menu_back" />
        <Label class="action-bar-title" text="Appointment" horizontalAlignment="center" />
    </ActionBar>
    <GridLayout class="page-content">
        <ScrollView>
            <StackLayout>
                <GridLayout rows="auto, auto, auto, auto" visibility="{{ showAbove ? 'visible' : 'collapsed' }}">
                    <Label text="{{name}}" class="prodTitle" textWrap="true"></Label>
                    <GridLayout row="1" rows="*, *, *, *, *, *, *, *, *, *, *" columns="auto,auto">
                        <Label text="Customer" class="p-l-15 p-b-10 m-r-20 text-secondary font-weight-bold" />
                        <Label text="{{ cust }}" row="0" col="1" class="text p-b-10" />
                        <Label text="Company" row="1" class="p-l-15 p-b-10 m-r-20 text-secondary font-weight-bold" />
                        <Label text="{{ company }}" row="1" col="1" class="text p-b-10" />
                        <Label text="Issue" row="2" class="p-l-15 p-b-10 m-r-20 text-secondary font-weight-bold" />
                        <Label text="{{ issue }}" row="2" col="1" class="text p-b-10" />
                        <Label text="Vendor SKU" row="3" class="p-l-15 p-b-10 m-r-20 text-secondary font-weight-bold" />
                        <Label text="{{ vendorSKU }}" row="3" col="1" class="text p-b-10" />
                        <Label text="Category 1" row="4" class="p-l-15 p-b-10 m-r-20 text-secondary font-weight-bold" />
                        <Label text="{{ cat1 }}" row="4" col="1" class="text p-b-10" />
                        <Label text="Category 2" row="5" class="p-l-15 p-b-10 m-r-20 text-secondary font-weight-bold" />
                        <Label text="{{ cat2 }}" row="5" col="1" class="text p-b-10" />
                        <Label text="Detail 1" row="6" class="p-l-15 p-b-10 m-r-20 text-secondary font-weight-bold" />
                        <Label text="{{ det1 }}" row="6" col="1" class="text p-b-10" />
                        <Label text="Detail 2" row="7" class="p-l-15 p-b-10 m-r-20 text-secondary font-weight-bold" />
                        <Label text="{{ det2 }}" row="7" col="1" class="text p-b-10" />
                        <Label text="Weight (lbs)" row="8" class="p-l-15 p-b-10 m-r-20 text-secondary font-weight-bold" />
                        <Label text="{{ weight }}" row="8" col="1" class="text p-b-10" />
                        <Label text="On Hand" row="9" class="p-l-15 p-b-10 m-r-20 text-secondary font-weight-bold" />
                        <Label text="{{ stock }}" row="9" col="1" class="text p-b-10" />
                    </GridLayout>
                    <Button row="2" text="Sign &amp; Close" class="requestButton" tap="showDrawpad" />
                </GridLayout>
                <StackLayout row="3" visibility="{{ showDP ? 'visible' : 'collapsed' }}">
                    <Label class="h2" textWrap="true" text="By signing here, I agree that the service was performed to my satisfaction."></Label>
                    <DrawingPad:DrawingPad height="400" id="drawingPad" penColor="{{ penColor }}" penWidth="{{ penWidth }}" />
                    <GridLayout rows="auto" columns="*,*">
                        <Button col="0" text="Sign" class="signButton" tap="onSignTap" />
                        <Button col="1" text="Cancel" class="requestButton" tap="onCancel" />
                    </GridLayout>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </GridLayout>
</Page>